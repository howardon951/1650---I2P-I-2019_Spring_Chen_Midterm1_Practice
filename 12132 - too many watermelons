#include<stdio.h>
int i,j,n,tmp;
int a[200001],b[200001],c[200001];

int main()
{
    scanf("%d",&n);
    for(i=1;i<=n;i++){
       scanf("%d",&a[i]);
       c[a[i]]=i;
    }
    for(i=1;i<=n;i++){
       scanf("%d",&b[i]);
    }
    //*************input**************
    tmp=0;
    printf("%d",c[b[1]]);
    tmp=c[b[1]];
    for(i=2;i<=n;i++){
       int p=c[b[i]];
       if(p>tmp){
            printf(" %d",p-tmp);
            tmp=p;
       }
       else printf(" 0");
    }
    printf("\n");
    return 0;
}
